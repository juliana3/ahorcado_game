{
  "name": "ahorcado_juego",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "dist": "electron-builder"
},
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.tuusuario.ahorcado",
    "productName": "AhorcadoJuego",
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    }
  },
  "files": [
    "**/*"
  ],
  "linux": {
    "target": ["AppImage", "deb"]
  },
  "mac": {
    "target": "dmg"
  }
}

